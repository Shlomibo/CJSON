{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "types",
        "outDir": "dist",

        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,

        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules/**/*",
        "!node_modules/@types/**/*"
    ]
}